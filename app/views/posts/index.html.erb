<!DOCTYPE html>
<html>
<style type="text/css">
label {color: red}
th {color:yellow}
link_to {color: red;}
td {color:green}
iframe {color:black}
body {background-image: url("https://encrypted-tbn2.gstatic.com/images?q=tbn:ANd9GcTf-L2B8JFJU5dNp5B6k02I5cqW6rC7KZ0juQO8aH0D97CdM4uXrQ");
color: black;
 }
 h1 {color:white}
.temp{
  color: red
}
#tag_cloud {
  width: 400px;
  line-height: 1.6em;
  .s { font-size: 0.8em; color: red;}
  .m { font-size: 1.2em;color: red; }
  .l { font-size: 1.8em; color: red;}

}
.text_ {
  -webkit-border-radius: 5px;
  -moz-border-radius: 5px;
  border-radius: 5px;
}

sub {
  bottom: -0.99em;
  right: -em;
  right: -1em;
}
</style>
<script type="text/javascript">  
  $(function(){       
    $('.text_comment').hide();    
    $('.link_to_comment').on('click',function(event){ 
      event.preventDefault();           
      var temp="#text_comment_"+ $(this).attr("id");      
      $(temp).show();
    });

    $(".text_").keyup(function (e) {            
      if (e.keyCode == 13) {                                 
        $.get('/comment', {content: $(this).val(),id: $(this).attr('val')}, function() {                    
        });        
      }
    });

  });

</script>

<body >

<div class="page-header">
<h1>All posts</h1>
</div>
<% if flash[:notice] %>
<%= flash[:notice] %>
  <% end %>

<div id="tag_cloud">
  <div class="panel panel-default">
    <div class="panel-heading custom_class" >
      <div class="panel-body">
        <h4>Tags:</h4>
          <% tag_cloud Post.tag_counts, %w{s m l} do |tag, css_class| %>
            <%= link_to tag.name, tag_path(tag.name), class: css_class %>
          <% end %>
      </div>
    </div>
  </div>
</div>
  <div class="row ">
    <div class="col-md-2 col-md-offset-1">
      <% @post.each do |msg| %>
        <div id="tag_cloud">
          <div class="panel panel-default">
            <div class="panel-heading custom_class" >
              <div class="panel-body">                                
                <%= link_to msg.title, post_path(msg) %>
                <%= link_to image_tag(msg.image.url(:thumb),:width => 70, :height => 70),post_path(msg)%>   
                <br><br><br>
                <center>
                  <iframe  width="250" height="250" src="<%= "http://www.youtube.com/embed/"+msg.video.split("=").last if msg.video.present?%>" allowfullscreen="allowfullscreen">
                  </iframe>                  
                </center>
                <br>                
                <%= msg.body.first(80) %>                
                <br><br>                
                <div class="row ">
                  <div class="col-md-4">
                    <%= link_to 'comment', '#' ,:id=>"#{msg.id}",:class=>"link_to_comment"%>
                  </div>

                  <div class="col-md-4">
                    <%= link_to 'like', post_path(msg) %>
                  </div>

                  <div class="col-md-4">
                    <%= link_to 'tag', post_path(msg) %>
                  </div>
                  <div id="commented_<%=msg.id%>" class="commented">
                    <br><br>                                        
                    <%Comment.where(post_id: msg.id).each do |comm|%>
                      <div class="panel panel-primary">
                        <div class="panel-heading" id="<%=Time.now%>" style="min-height: 5; max-height: 5;">
                          <%=comm.content%><sub><%=User.find(comm.user_id).email%></sub>
                        </div>                      
                      </div>
                    <%end%>
                  </div>
                  <div id="text_comment_<%=msg.id%>" style="display:none;" class="text_comment">
                    <br><br>
                    <%= text_field_tag :comment,nil,:size => "40",:val=>msg.id,:class=>"text_" %> 
                    <br>                    
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      <%end%>
    </div>
  </div>


</body>
</html>