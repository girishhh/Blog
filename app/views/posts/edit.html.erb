<!DOCTYPE html>
<html>
<style type="text/css">
label {color: yellow}
body {background-image: url("https://encrypted-tbn2.gstatic.com/images?q=tbn:ANd9GcTf-L2B8JFJU5dNp5B6k02I5cqW6rC7KZ0juQO8aH0D97CdM4uXrQ");
 }
 .container {
  margin:1%;

}
label {display: block;}

</style>
<body >

<div class="page-header">
<h1>Editing posts</h1>
</div>
<%= form_for @post do |f| %>

  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@post.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <p>
    <div class="container">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  </p>


<p>
    <div class="container">
<%= f.label :tag_list, "Tags (separated by commas)" %><br />
<%= f.text_field :tag_list %>
</div>
  </p>


<p>
  <div class="container">
<%= f.label :image%><br>
<%= f.file_field :image%><br>
</div>
</p>

  <p>
    <div class="container">
    <%= f.label :body %><br>
    <%= f.text_area :body, :rows=>"6",:cols =>135 %>
  </div>
  </p>

<p>
  <div class="container">
<%= f.label "you tube video url"%>
<%= f.text_field :you_tube_video%>
</div>
</p>

<p>
  <div class="container">
<%= f.label :video%>
<%= f.file_field :video%>
</div>
</p>
<br>
  <p>
    <div class="container">
    <%=f.submit %>
  </div>
  </p>

<% end %>

</body>
</html>