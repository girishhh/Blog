<!DOCTYPE html>
<html>
<style type="text/css">
label {color: yellow}
body {background-image: url("https://encrypted-tbn2.gstatic.com/images?q=tbn:ANd9GcTf-L2B8JFJU5dNp5B6k02I5cqW6rC7KZ0juQO8aH0D97CdM4uXrQ");
 }
.align{
    vertical-align: middle;
}
</style>
<body >



<div class="page-header">
<h1>New post</h1>
</div>

<% if @post.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@post.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>



<%= form_for :post,url:posts_path do |f| %>



<p>
  <%= f.label :title %>
<%= f.text_field :title%><br>
</p>
<p>
  <p class="align">
  <%= f.label :body%>
  </p>
  <%= f.text_area :body, :rows=>"6",:cols =>155 %>
  <%= f.hidden_field :user_id, :value => current_user.id %>
  </p>

<p>
<%= f.label :image%><br>
<%= f.file_field :image%><br>
</p>
<p>
<%= f.label :video%><br>
<%= f.text_field :video%><br>
</p>

<p>
  <%= f.submit%>
  </p>
  <%end%>


</body>
</html>